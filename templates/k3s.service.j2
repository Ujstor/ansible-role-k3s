[Unit]
Description=Lightweight Kubernetes
Documentation=https://k3s.io
After=network-online.target

[Service]
{% if inventory_hostname != hostvars[groups[k3s_master_group][0]]['inventory_hostname'] %}
Environment=K3S_TOKEN={{ hostvars[groups[k3s_master_group][0]]['k3s_node_token'] }}
{% endif %}
Type=notify
ExecStartPre=-/sbin/modprobe br_netfilter
ExecStartPre=-/sbin/modprobe overlay
{% if k3s_master %}
ExecStart=/usr/local/bin/k3s server {{ k3s_master_extra_args | join(" ") }}
{% endif %}
{% if k3s_agent %}
ExecStart=/usr/local/bin/k3s agent {{ k3s_agent_extra_args | join(" ") }}
{% endif %}
KillMode=process
Delegate=yes
# Having non-zero Limit*s causes performance problems due to accounting overhead
# in the kernel. We recommend using cgroups to do container-local accounting.
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
TasksMax=infinity
TimeoutStartSec=0
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
